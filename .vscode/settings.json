{
  // Render all whitespaces
  "editor.renderWhitespace": "all",

  // JSON specific
  "[json]": {
    "editor.tabSize": 2,
  },

   // Rustlang specific
  "[rust]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": false,
    "editor.wordWrap": "on"
  },
  "cSpell.diagnosticLevel": "Error",
  "cSpell.allowCompoundWords": true,
  "cSpell.flagWords": [
    "kreyen"
  ],
  "cSpell.ignoreWords": [
    "Krey",
    "Hrbek",
    "kreyren",
    "sysfetch",
    "FSFE",
    "Cydia"
  ],
  "todo-tree.general.tags": [
    "FIXME",
    "TODO",
    "DNM",
    "DNC",
    "DNR"
  ],
  // NOTE: Icons has to be valid codicons (https://microsoft.github.io/vscode-codicons/dist/codicon.html)
  "todo-tree.highlights.customHighlight": {
    "FIXME": {
      "foreground": "orange",
      "icon": "report",
      "fontWeight": "bold"
    },
    "TODO": {
      "foreground": "turquoise",
      "icon": "tasklist",
      "fontWeight": "bold"
    },
    "DOCS": {
      "foreground:": "blue",
      "icon": "repo",
      "fontWeight": "bold"
    },
    "DNM": {
      "foreground": "red",
      "icon": "alert",
      "fontWeight": "bold"
    },
    "DNR": {
      "foreground": "red",
      "icon": "alert",
      "fontWeight": "bold"
    },
    "DNC": {
      "foreground": "red",
      "icon": "alert",
      "fontWeight": "bold"
    }
  },
  "todo-tree.regex.regex": "($TAGS)((\\-.*|)\\(.*\\)):",
  "code-eol.highlightExtraWhitespace": true,
  "code-eol.newlineCharacter": "↵",
  "code-eol.crlfCharacter": "↓",
  "cSpell.words": [
    "gdnative",
    "instanciable",
    "unwantedly"
  ],
  "restructuredtext.confPath": "",
  "rust-analyzer.cargo.allFeatures": true,
}